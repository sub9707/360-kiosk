{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "./src/renderer/components/*"
      ],
      "@/hooks/*": [
        "./src/renderer/hooks/*"
      ],
      "@/types/*": [
        "./src/renderer/types/*"
      ],
      "@/assets/*": [
        "./src/renderer/assets/*"
      ]
    }
  }
}